<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <template id="sale_order_report_my_description" inherit_id="sale.report_saleorder_document">
        <xpath expr="//div[@name='informations_date']" position="after">
            <div t-if="doc.my_description" class="col-auto col-3 mw-100 mb-2" name="informations_date">
                <strong>Meine Beschreibung:</strong>

                <t t-if="doc.my_description == 'Hallo'">
                    <t t-set="color" t-value="'color: red'"/>
                </t>
                <t t-else="">
                    <t t-set="color" t-value="'color: blue'"/>
                </t>
                <p class="m-0" t-esc="doc.get_my_description()" t-att-style="color"/>
            </div>
        </xpath>
        <xpath expr="//th[@name='th_priceunit']" position="after">
            <th class="text-start">Extra Kosten</th>
        </xpath>
        <xpath expr="//td[@name='td_priceunit']" position="after">
            <td class="text-end my-class">
                <span t-field="line.extra_price"/>
            </td>
        </xpath>
        <xpath expr="//div[@class='page']" position="inside">
            <table class="table table-sm o_main_table table-borderless mt-4">
                <!-- In case we want to repeat the header, remove "display: table-row-group" -->
                <thead style="display: table-row-group">
                    <tr>
                        <th name="th_description" class="text-start">Description</th>
                        <th name="th_date" class="text-end">Date</th>
                        <th name="th_create_uid" class="text-end">Create by</th>
                        <th name="th_customer" class="text-end">Customer</th>
                    </tr>
                </thead>
                <tbody class="sale_tbody">
                    <t t-foreach="doc.my_model_ids" t-as="model">
                        <tr>
                            <td name="td_description">
                                <span t-field="model.description"/>
                            </td>
                            <td name="td_date" class="text-end">
                                <span t-field="model.date" t-if="model.date_allowed == 'ja'"  />
                            </td>
                            <td name="td_create_uid" class="text-end">
                                <span t-field="model.create_uid"/>
                            </td>
                            <td name="td_customer" class="text-end">
                                <span t-field="model.customer"/>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>
        </xpath>
    </template>
</odoo>