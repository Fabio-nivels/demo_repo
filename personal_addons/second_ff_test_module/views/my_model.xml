<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="my_model_tree_view" model="ir.ui.view">
        <field name="name">my.model.tree.view</field>
        <field name="model">my.model</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="description"/>
                <field name="date_allowed" invisible="1"/>
                <field name="date" attrs="{'invisible': [('date_allowed', '==', 'nein')]}"/>
                <field name="create_uid"/>
                <field name="customer"/>
                <field name="customer_brithday"/>
            </tree>
        </field>
    </record>

    <record id="my_model_form_view" model="ir.ui.view">
        <field name="name">my.model.form.view</field>
        <field name="model">my.model</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <header>
                <button name="set_time" type="object" string="Set time" attrs="{'invisible': [('date_allowed', '==', 'nein')]}"/>
                <button name="search_customer" type="object" string="Search Customer"/>
                <button name="print_etiquette" type="object" string="Print Etiquette"/>
            </header>
            <sheet>
                <group>
                    <field name="description"/>
                    <field name="customer"/>
                    <field name="date_allowed"/>
                    <field name="date" readonly="1" attrs="{'invisible': [('date_allowed', '==', 'nein')]}"/>
                    <field name="goal_value"/>
                    <field name="value"/>
                    <field name="progress" readonly="1" digits="[12,2]"/>
                </group>
            </sheet>
        </field>
    </record>

    <record id="my_model_action" model="ir.actions.act_window">
        <field name="name">My Model</field>
        <field name="res_model">my.model</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="menu_my_model_config"
            action="my_model_action"
            name="My Model"
            parent="sale.product_menu_catalog"
            groups="base.group_user"
            sequence="40"
    />

    <record id="view_my_model_filter" model="ir.ui.view">
        <field name="name">my.model.filter</field>
        <field name="model">my.model</field>
        <field name="arch" type="xml">
            <search string="Search Model">
                <filter name="description"
                string="Description"
                domain="[('description','ilike','self')]"/>
            </search>
        </field>
    </record>
</odoo>