<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_my_description" model="ir.ui.view">
        <field name="name">SalesOrder</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"></field>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="my_description"/>
            </xpath>
            <xpath expr="//header" position="inside">
                <button name="change_name" type="object" string="Beschreibung Ã¤ndern"/>
                <button name="delete" type="object" string="Delete"/>
            </xpath>
            <xpath expr="//tree/field[@name='price_unit']" position="after">
                <field name="extra_price"/>
            </xpath>
            <xpath expr="//page[@name='customer_signature']" position="after">
                <page string="My Models" name="my_models_page">
                    <field name="my_model_ids" widget="many2many"/>
                </page>
            </xpath>
        </field>
    </record>

    <record id="my_model_action" model="ir.actions.act_window">
        <field name="name">My Model</field>
        <field name="res_model">my.model</field>
        <field name="view_mode">tree,form</field>
    </record>



</odoo>