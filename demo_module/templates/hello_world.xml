<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="my_model_list">
        <t t-call="website.layout">
            <div id="wrap">
                <div class="oe_structure"/>
                <div class="container mt16">
                    <a name="create" type="object" t-attf-href="/my/model/create">
                        <button class="btn btn-success me-1 fa fa-plus"></button>
                    </a>
                    <table class="table table-sm o_main_table table-borderless mt-4">
                        <thead style="display: table-row-group">
                            <tr>
                                <th name="th_description" class="text-start">Description</th>
                                <th name="th_date" class="text-end">Date</th>
                                <th name="th_create_uid" class="text-end">Create by</th>
                                <th name="th_customer" class="text-end">Customer</th>
                                <th name="th_customer_birthday" class="text-end">Customer Birthday</th>
                                <th name="th_details" class="text-end"></th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">
                            <t t-foreach="my_model_ids" t-as="my_model_id">
                                <tr>
                                    <td name="td_description">
                                        <span t-field="my_model_id.description"/>
                                    </td>
                                    <td name="td_date" class="text-end">
                                        <span t-field="my_model_id.date" t-if="my_model_id.date_allowed == 'ja'"/>
                                    </td>
                                    <td name="td_create_uid" class="text-end">
                                        <span t-field="my_model_id.create_uid"/>
                                    </td>
                                    <td name="td_customer" class="text-end">
                                        <span t-field="my_model_id.customer"/>
                                    </td>
                                    <td name="td_customer_birthday" class="text-end">
                                        <span t-field="my_model_id.customer_brithday"/>
                                    </td>
                                    <td name="td_details" class="text-end">
                                        <a name="details" type="object" t-attf-href="/my/model/{{my_model_id.id}}">
                                            <button class="btn btn-secondary me-1 fa fa-edit"></button>
                                        </a>
                                    </td>
                                    <td name="td_delete" class="text-end">
                                        <a name="delete" type="object" t-attf-href="/my/model/delete/{{my_model_id.id}}">
                                            <button class="btn btn-danger me-1 fa fa-trash"></button>
                                        </a>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </div>
        </t>
    </template>

    <template id="my_model_detail">
        <t t-call="website.layout">
            <div id="wrap2">
                <div class="oe_structure"/>
                <div class="container mt16">
                    <a name="back" type="object" t-attf-href="/my/models">
                        <button class="btn btn-secondary me-1 fa fa-chevron-left"></button>
                    </a>
                    <form t-attf-action="/my/model/write/{{my_model_id.id}}" method="GET">
                        <table class="table table-borderless mt-4">
                            <tr>
                                <th name="th_description" class="text-start">
                                    <label for="input_description">Description</label>
                                </th>
                                <td name="td_description">
                                    <input class="form-control" type="text" name="description" id="input_description" t-att-value="my_model_id.description"/>
                                    <!--                                        <span t-field="my_model_id.description"/>-->
                                </td>
                            </tr>
                            <tr t-if="my_model_id.date_allowed == 'ja'">
                                <th name="th_date" class="text-start">
                                    <label for="input_date">Date</label>
                                </th>
                                <td name="td_date">
                                    <input class="form-control" type="date" name="date" id="input_date" t-att-value="my_model_id.date"/>
<!--                                    <span t-field="my_model_id.date"/>-->
                                </td>
                            </tr>
                            <tr>
                                <th name="th_create_uid" class="text-start">Create by</th>
                                <td name="td_create_uid" class="text-start">
                                    <span t-field="my_model_id.create_uid"/>
                                </td>
                            </tr>
                            <tr>
                                <th name="th_customer" class="text-start">Customer</th>
                                <td name="td_customer" class="text-start">
                                    <span t-field="my_model_id.customer"/>
                                </td>
                            </tr>
                            <tr t-if="my_model_id.customer_brithday">
                                <th name="th_customer_birthday" class="text-start">Customer Birthday</th>
                                <td name="td_customer_birthday" class="text-start">
                                    <span t-field="my_model_id.customer_brithday"/>
                                </td>
                            </tr>
                            <tr>
                                <th name="th_goal_value" class="text-start">
                                    <label for="input_goal_value">Goal Value</label>
                                </th>
                                <td name="td_goal_value" class="text-start">
                                    <input class="form-control" type="number" name="goal_value" id="input_goal_value" t-att-value="my_model_id.goal_value"/>
<!--                                    <span t-field="my_model_id.goal_value" digits="[12,2]"/>-->
                                </td>
                            </tr>
                            <tr>
                                <th name="th_value" class="text-start">
                                    <label for="input_value">Value</label>
                                </th>
                                <td name="td_value" class="text-start">
                                    <input class="form-control" type="number" name="value" id="input_value" t-att-value="my_model_id.value"/>
<!--                                    <span t-field="my_model_id.value" digits="[12,2]"/>-->
                                </td>
                            </tr>
                            <tr t-if="my_model_id.goal_value >= 1 and my_model_id.value >= 1">
                                <th name="th_progress" class="text-start">Progress</th>
                                <td name="td_progress" class="text-start">
                                    <span t-field="my_model_id.progress" digits="[12,2]"/>
                                </td>
                            </tr>
                        </table>
                        <input class="btn btn-secondary float-end mb-5" type="submit" value="Speichern"/>
                    </form>
                </div>
            </div>
        </t>
    </template>

    <template id="my_model_create">
        <script type="text/javascript" src="../static/src/js/hello_world.js"></script>
        <t t-call="website.layout">
            <div id="wrap3">
                <div class="oe_structure"/>
                <div class="container mt16">
                    <a name="cancel" type="object" t-attf-href="/my/models">
                        <button class="btn btn-secondary me-1 fa fa-chevron-left"></button>
                    </a>
                    <form t-attf-action="/my/model/create/save" method="GET">
                        <table class="table table-borderless mt-4">
                            <tr>
                                <th name="th_description" class="text-start">
                                    <label for="input_description_create">Description</label>
                                </th>
                                <td name="td_description">
                                    <input class="form-control" type="text" name="description" id="input_description_create"/>
                                    <!--                                        <span t-field="my_model_id.description"/>-->
                                </td>
                            </tr>
                            <tr>
                                <th name="th_date_allowed" class="text-start">
                                    <label for="input_date_create">Date Allowed</label>
                                </th>
                                <td name="td_date_allowed">
                                    <select class="form-control" name="date_allowed" onchange="function hi(){alert('Hi!')};hi()">
                                        <option t-attf-value="'nein'">Nein</option>
                                        <option t-attf-value="'ja'">Ja</option>
                                    </select>
                                </td>
                            </tr>
                            <tr t-if="date_allowed == 'ja'">
                                <th name="th_date" class="text-start" t-if="">
                                    <label for="input_date_create">Date</label>
                                </th>
                                <td name="td_date">
                                    <input class="form-control" type="date" name="date" id="input_date_create"/>
                                    <!--                                        <span t-field="my_model_id.description"/>-->
                                </td>
                            </tr>
                            <tr>
                                <th name="th_goal_value" class="text-start">
                                    <label for="input_goal_value_create">Goal Value</label>
                                </th>
                                <td name="td_goal_value" class="text-start">
                                    <input class="form-control" type="number" name="goal_value" id="input_goal_value_create"/>
<!--                                    <span t-field="my_model_id.goal_value" digits="[12,2]"/>-->
                                </td>
                            </tr>
                            <tr>
                                <th name="th_value" class="text-start">
                                    <label for="input_value_create">Value</label>
                                </th>
                                <td name="td_value" class="text-start">
                                    <input class="form-control" type="number" name="value" id="input_value_create"/>
<!--                                    <span t-field="my_model_id.value" digits="[12,2]"/>-->
                                </td>
                            </tr>
                        </table>
                        <input class="btn btn-secondary float-end mb-5" type="submit" value="Speichern"/>
                    </form>
                </div>
            </div>
        </t>
    </template>
</odoo>